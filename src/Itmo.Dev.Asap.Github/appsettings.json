{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:T} {Level:u3}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Serilogs/AppLogs_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "gRPC": {
        "Url": "http://*:8020",
        "Protocols": "Http2"
      },
      "Http": {
        "Url": "http://*:8022",
        "Protocols": "Http1"
      } 
    }
  },
  "Application": {
    "Invites": {
      "Enabled": true,
      "Delay": {
        "Hours": 12,
        "Minutes": 0
      }
    },
    "Provisioning": {
      "SubjectCourses": {
        "Eraser": {
          "IsDisabled": false,
          "DelaySeconds": 3600,
          "ProvisionedLifetimeSeconds": 7200,
          "PageSize": 200
        }
      }
    }
  },
  "Infrastructure": {
    "Octokit": {
      "PrivateKey": "",
      "AppId": 0,
      "JwtExpirationSeconds": 600,
      "Service": {
        "Installation": {
          "Id": 0,
          "Enabled": false
        },
        "Organization": {
          "Name": "",
          "Enabled": false
        },
        "User": {
          "Name": "",
          "Enabled": false
        }
      }
    },
    "Cache": {
      "SizeLimit": null,
      "ExpirationScanFrequencySeconds": 60,
      "EntryAbsoluteExpirationSeconds": null,
      "EntrySlidingExpirationSeconds": null
    },
    "DataAccess": {
      "PostgresConfiguration": {
        "Host": "",
        "Database": "",
        "Port": 0,
        "Username": "",
        "Password": "",
        "SslMode": ""
      }
    },
    "Integrations": {
      "Core": {
        "ServiceUri": ""
      }
    }
  },
  "Presentation": {
    "Webhooks": {
      "Enabled": true,
      "Secret": ""
    },
    "Kafka": {
      "Consumers": {
        "AssignmentCreated": {
          "Topic": "asap_assignment"
        },
        "SubjectCourseCreated": {
          "Topic": "asap_subject_course"
        }
      }
    }
  }
}
